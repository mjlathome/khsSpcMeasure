<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khs.spcmeasure"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- declare Bluetooth permissions -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- ensure application is only available to devices which support Bluetooth Low Energy (BLE) -->
    <uses-feature
        android:name="android:.hardware.bluetooth_le"
        android:required="true" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name=".SylvacBleService"
            android:exported="false" />

        <activity
            android:name=".SetupListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetupImportActivity"
            android:label="@string/title_activity_import_setup"
            android:launchMode="singleTop"
            android:parentActivityName=".SetupListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SetupListActivity" />
        </activity>
        <activity
            android:name=".MntSetupActivity"
            android:label="@string/title_activity_mnt_setup" >
        </activity>
        <activity
            android:name=".PieceListActivity"
            android:label="@string/title_activity_piece_list"
            android:launchMode="singleTop"
            android:parentActivityName=".SetupListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.khs.spcmeasure.SetupListActivity" />
        </activity>
        <activity
            android:name=".FeatureReviewActivity"
            android:label="@string/title_activity_feature_review"
            android:launchMode="singleTop"
            android:parentActivityName=".PieceListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.khs.spcmeasure.PieceListActivity" />
        </activity>
        <activity
            android:name=".FeatureActivity"
            android:label="@string/title_activity_feature"
            android:launchMode="singleTop"
            android:parentActivityName=".FeatureReviewActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.khs.spcmeasure.FeatureReviewActivity" />
        </activity>

        <service
            android:name=".service.SimpleCodeService"
            android:exported="false" >
        </service>
        <service
            android:name=".service.SetupService"
            android:exported="false" >
        </service>
    </application>

</manifest>
